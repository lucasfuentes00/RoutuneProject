<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#e0f0ff">

    <!-- Piano Keys -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp">

        <!-- Capa de teclas blancas -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/white_keys_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button android:id="@+id/key_C" style="@style/PianoKeyWhiteEnabled"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/key_D" />

            <Button android:id="@+id/key_D" style="@style/PianoKeyWhiteEnabled"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/key_C"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/key_E" />

            <Button android:id="@+id/key_E" style="@style/PianoKeyWhiteEnabled"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/key_D"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/key_F" />

            <Button android:id="@+id/key_F" style="@style/PianoKeyWhiteEnabled"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/key_E"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/key_G" />

            <Button android:id="@+id/key_G" style="@style/PianoKeyWhiteEnabled"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/key_F"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/key_A" />

            <Button android:id="@+id/key_A" style="@style/PianoKeyWhiteEnabled"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/key_G"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/key_B" />

            <Button android:id="@+id/key_B" style="@style/PianoKeyWhiteEnabled"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/key_A"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Capa de teclas negras -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/black_keys_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/key_Csharp"
                style="@style/PianoKeyBlackEnabled"
                android:text="C♯"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.08"
                app:layout_constraintHeight_percent="0.65"
                android:elevation="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:translationX="40dp" />

            <Button
                android:id="@+id/key_Dsharp"
                style="@style/PianoKeyBlackEnabled"
                android:text="D♯"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.08"
                app:layout_constraintHeight_percent="0.65"
                android:elevation="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:translationX="95dp" />

            <Button
                android:id="@+id/key_Fsharp"
                style="@style/PianoKeyBlackEnabled"
                android:text="F♯"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.08"
                app:layout_constraintHeight_percent="0.65"
                android:elevation="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:translationX="200dp" />

            <Button
                android:id="@+id/key_Gsharp"
                style="@style/PianoKeyBlackEnabled"
                android:text="G♯"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.08"
                app:layout_constraintHeight_percent="0.65"
                android:elevation="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:translationX="255dp" />

            <Button
                android:id="@+id/key_Asharp"
                style="@style/PianoKeyBlackEnabled"
                android:text="A♯"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.08"
                app:layout_constraintHeight_percent="0.65"
                android:elevation="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:translationX="310dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <!-- Feedback -->
    <TextView
        android:id="@+id/txt_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textAlignment="center"
        android:visibility="gone"
        android:padding="8dp" />

    <!-- Botones -->
    <Button android:id="@+id/btn_play" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Play" />
    <Button android:id="@+id/btn_play_again" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Play Again" android:visibility="gone" />
    <Button android:id="@+id/btn_play_next_note" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Play Next Note" android:visibility="gone" />
    <Button android:id="@+id/btn_show_answer" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Show Answer" android:visibility="gone" />
    <Button android:id="@+id/btn_edit_selection" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Edit Selection" />
    <Button android:id="@+id/btn_done" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Done" android:visibility="gone" />
    <Button android:id="@+id/btn_view_statistics" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="View Statistics" />

    <LinearLayout
        android:id="@+id/statistics_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Las estadísticas se mostrarán aquí." />
    </LinearLayout>
</LinearLayout>
